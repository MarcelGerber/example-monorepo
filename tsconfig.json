{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2021",
    "module": "ES2020",
    "lib": ["ESNext", "DOM"],

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./packages"
  },
  "ts-node": {
    // Do not forget to `npm i -D tsconfig-paths`
    "require": ["tsconfig-paths/register"]
  }
}
